function pghashlib_install() {

    brew install docutils # provides rst2html command
    pushd /tmp && \
    wget --quiet https://github.com/markokr/pghashlib/archive/master.zip -O pghashlib.zip && \
    echo "unzip" && unzip pghashlib.zip &>/dev/null && \
    pushd pghashlib-master && \
    echo "hashlib install" && \
    echo "make" && make &>/dev/null && \
    echo "make install" && make install &>/dev/null && \
    echo "hashlib done"

    popd && \
    echo "Tidyup hashlib" && \
    [ -e pghashlib-master ] && rm -rf pghashlib-master && \
    rm -f pghashlib.zip &>/dev/null || true

    popd

    psql -U $(whoami) -c "create role postgres superuser login password '';" &>/dev/null || true
    psql -U postgres -c "drop extension hashlib" &>/dev/null || true

    psql -U postgres  -c "create extension hashlib" && \
    [ $(psql -U postgres -t -c "select encode(hash128_string('abcdefg', 'murmur3'), 'hex');" | head -1 | awk '{print $1}') == '069b3c88000000000000000000000000' ] \
