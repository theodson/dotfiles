function clearall() {
    [ ! -e ./artisan ] && echo "no artisan" && return
    artisan="php artisan "
    dotenv=.env
    clearenv="${1:-${APP_ENV:-}}"
    if [ -n "$clearenv" ]; then
        artisan="php artisan --env $clearenv "
        dotenv=.env.$clearenv
        # reset if local
        if [ "$clearenv" = "local" ]; then
            dotenv=.env
        fi
    fi
    echo -e "\nUsing APP_ENV as '${clearenv:-local}' with dotenv file $dotenv \n"
    [ ! -e "${dotenv}" ] && {
        echo "Stopping - cannot find dotenv file '$dotenv'"
        return 1
    }
    grep -E 'APP_ENV|_CONNECTION|_DRIVER|PROCORE|DB_DATABASE' $dotenv

    php_ver="$(get_php_version)"

    case "$php_ver" in
    5.6)
        logit "not supported" && return 1
        ;;
    7.0)
        artisan="php artisan "
        # there isn't optimize:clear for php7.0 compatible laravel versions
        # $artisan event:clear
        $artisan view:clear
        $artisan cache:clear
        $artisan route:clear
        $artisan config:clear
        # the above called in newer laravel versions via optimize:clear
        $artisan clear-compiled
        # /bin/rm -f bootstrap/cache/*.php || true
        $artisan opcache:clear &>/dev/null || echo -e "Skipping: artisan opcache:clear ( use argument 'oc' ) "
        $artisan queue:flush

        if [ $# -gt 1 ]; then
            # optimize things again.
            $artisan optimize
        fi
        ;;
     *)
        # this clears all
        $artisan optimize:clear
        # /bin/rm -f bootstrap/cache/*.php || true
        $artisan opcache:clear &>/dev/null || echo -e "Skipping: artisan opcache:clear ( use argument 'oc' ) "
        $artisan queue:clear
        $artisan queue:flush
        $artisan schedule:clear-cache

        if [ $# -gt 1 ]; then
            # optimize things again.
            $artisan optimize
        fi
    esac

    return

}

